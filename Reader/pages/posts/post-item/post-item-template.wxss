.post-author-date{
    margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}
.post-title{
    font-weight: 600;
    font-size: 34rpx;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-image{
    margin-left: 16px;
    width: 100%;
    height: 440rpx;
    margin: auto 0;
    margin-bottom: 15px;
}
.post-content{
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    line-height: 40rpx;
    letter-spacing: 2rpx;
}
.post-like{
    font-size: 20rpx;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}
.post-like-image{
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}
.post-like-font{
    vertical-align: middle;
    margin-right: 20px;
}  
.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-block-end: 5px;
}