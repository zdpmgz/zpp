.post-container{
    display: flex;
    flex-direction: column;
}
.head-iamge{
    width: 100%;
    height: 460rpx;
}
.audio{
    width: 110rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    margin-left: -55rpx;
    top: 180rpx;
    opacity: 0.6;
}
.author-date{
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}
.avatar{
    width: 64rpx;
    height: 64rpx;
}
.author{
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    vertical-align: middle;
    color: #666;
}
.const-text{
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
}
.date{
    font-size: 24rpx;
    margin-left: 30rpx;
    vertical-align: middle;
    color: #999;
}
.title{
    margin-left: 40rpx;
    font-size: 36rpx;
    margin-top: 30rpx;
    font-weight: 700;
    letter-spacing: 2px;
    color: #4b556c;

}
.tool{
    margin-top: 20rpx;
}
.circle-img{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}
.circle-img Image{
    width: 70rpx;
    height: 70rpx;
}
.share-img{
    margin-left: 30rpx;
}
.horizon{
    width: 660rpx;
    height: 1px;
    background-color: #e5e5e5;
    position: relative;
    vertical-align: middle;
    top:46rpx;
    margin: 0 auto;
    z-index: -99;
}
.detail{
    color: #666;
    font-size: 24rpx;
    margin-left: 30rpx;
    margin-top: 80rpx;
    margin-bottom: 50rpx;
    margin-right: 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
    text-indent:2px;
}